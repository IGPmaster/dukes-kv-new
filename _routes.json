{
  "version": 1,
  "include": [
    "/*"
  ],
  "exclude": [
    "/build/*",
    "/static/*",
    "/_nuxt/*"
  ],
  "routes": [
    {
      "src": "/blog/.*",
      "dest": "/",
      "status": 200,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/promotion/.*",
      "dest": "/",
      "status": 200,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/blog",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/promotion",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}
